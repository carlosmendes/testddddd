<p id="notice"><%= notice %></p>

<h1>Tracks</h1>

<table>
  <thead>
    <tr>
      <th>Album</th>
      <th>Genre</th>
      <th>Media type</th>
      <th>Name</th>
      <th>Composer</th>
      <th>Miliseconds</th>
      <th>Bytes</th>
      <th>Unit price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.album %></td>
        <td><%= track.genre %></td>
        <td><%= track.media_type %></td>
        <td><%= track.name %></td>
        <td><%= track.composer %></td>
        <td><%= track.miliseconds %></td>
        <td><%= track.bytes %></td>
        <td><%= track.unit_price %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

